.main
  %div.flex.gap-8.flex-col
    %div.text-2xl.text-gray-600= "Your Files"
    %span.cursor-pointer.text-red-400{id: :new_button} Upload New
    %div.hidden{id: :form_container}
      %form{action: create_upload_path, method: :post, enctype: "multipart/form-data"}
        %div.flex.flex-col.gap-8
          %div.cursor-pointer.border.border-gray-400.border-dashed.border-2.rounded-lg.w-full.h-80.relative.bg-gray-100
            %div.top-0.left-0.flex.w-full.h-full.justify-center.items-center.text-gray-500.font-semibold.tracking-wide
              %span Drop
              %span.px-1
                %svg{xmlns:"http://www.w3.org/2000/svg", fill:"none", viewBox:"0 0 24 24", stroke_width:"1.5",stroke:"currentColor",class:"size-6"}
                  %path{stroke_linecap:"round",stroke_linejoin:"round", d:"M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m6.75 12-3-3m0 0-3 3m3-3v6m-1.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"}

              %span here or click to browse
            %input.cursor-pointer.top-0.absolute.p-32.opacity-0.bg-gray-200{type: :file, id: :file_input, name: :file}

    %div
      %div.grid.border-b.py-5.font-semibold.text-gray-600.text-md{class: "grid-cols-[2fr_1fr_5rem_5rem_5rem]"}
        %div Filename
        %div Size (bytes)
        %div.text-center Owner
        %div.text-center Public
        %div
      - @uploads.each do |upload|
        %a.items-center.border-b.grid.grid-cols-5.py-4{href: edit_upload_path(upload), class: "grid-cols-[2fr_1fr_5rem_5rem_5rem]"}
          %div= upload.file_name
          %div= upload.bytes
          - if upload.role == "owner"
            %div.text-center.text-green-700.text-xl &check;
          - else
            %div.text-center &nbsp;
          - if upload.public == 1
            %div.text-center.text-green-700.text-xl &check;
          - else
            %div &nbsp;
          %div.flex.justify-end
            %span.download-link{href: "#", onclick:"location.assign(\"/uploads/#{upload[:id]}/download\");return false;"}
              %svg{xmlns:"http://www.w3.org/2000/svg",fill:"none",viewBox:"0 0 24 24",stroke_width:"1.5",stroke:"currentColor",class:"size-6"}
                %path{stroke_linecap:"round",stroke_linejoin:"round",d:"M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"}


:javascript
  document.querySelector("#new_button").addEventListener("click", (evt) => {
    let form = document.querySelector("#form_container")
    if (form.classList.contains("hidden")) {
      form.classList.remove("hidden")
      evt.target.innerText = "Cancel"
    } else {
      form.classList.add("hidden")
      evt.target.innerText = "Upload New"
    }
  })

  document.querySelector("#file_input").addEventListener("change", function() {
    document.querySelector("form").submit()
  })

.main
  %div.cursor-pointer.p-8.text-xl{id: "share"}
    Share
    %div.flex.flex-col.gap-0.m-auto{class: "w-[30rem]"}
      - @user_list.each do |user|
        %form.m-0{id: "form_#{user[:id]}", method: :post, action: create_user_upload_path({id: @upload_id})}
          %input{type: :hidden, name: :user_id, value: user[:id]}
          %input{type: :hidden, name: :upload_id, value: @upload_id}
          %div.grid.grid-cols-2.border-b.py-4.items-center{id: "existing_shares"}
            %div
              %span.flex.gap-3
                = user[:full_name]
            %div.flex.flex-row.gap-4.items-center.justify-end
              %label{class: "inline-flex items-center cursor-pointer"}
                %input{type: :checkbox, name: :share, class: "sr-only peer toggle-switch", "data-user-id": user[:id]}
                %div{class: "relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"}

:javascript
  Array.from(document.querySelectorAll(".toggle-switch")).forEach(x => x.addEventListener("change", function() {
    let id = this.getAttribute("data-user-id")
    console.log(`#form_${id}`)
    document.querySelector(`#form_${id}`).submit()
  }))
